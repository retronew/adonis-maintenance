{
  "name": "@retronew/adonis-maintenance",
  "description": "Put your Adonis application in maintenance mode",
  "version": "0.8.0",
  "engines": {
    "node": ">=20.6.0"
  },
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./commands": "./build/commands/main.js",
    "./maintenance_provider": "./build/providers/maintenance_provider.js",
    "./services/main": "./build/services/main.js",
    "./types": "./build/src/types.js",
    "./maintenance_middleware": "./build/src/middlewares/maintenance_middleware.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "index:commands": "adonis-kit index build/commands",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run clean",
    "build": "tsc && npm run copy:templates && npm run index:commands",
    "dev": "tsc --watch",
    "version": "npm run build"
  },
  "keywords": [
    "adonis",
    "adonisjs",
    "maintenance"
  ],
  "author": {
    "name": "Martin Paucot",
    "email": "contact@martin-paucot.fr"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/retronew/adonis-maintenance",
    "directory": "packages/maintenance"
  },
  "license": "MIT",
  "dependencies": {
    "@adonisjs/tsconfig": "^1.4.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.17.0",
    "@adonisjs/eslint-config": "2.0.0-beta.7",
    "@adonisjs/lucid": "^21.6.0",
    "@adonisjs/prettier-config": "^1.4.0",
    "@japa/assert": "^4.0.0",
    "@japa/expect-type": "^2.0.2",
    "@japa/file-system": "^2.3.1",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "1.10.3",
    "@types/node": "^22.10.2",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "i": "^0.3.7",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.2.0"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}